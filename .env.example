# Anthropic API Key (required for damage assessment)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Stripe Keys (optional for demo mode, required for real payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# eBay API Keys (optional - uses mock data if not provided)
EBAY_APP_ID=your_ebay_app_id
EBAY_CERT_ID=your_ebay_cert_id
EBAY_DEV_ID=your_ebay_dev_id

# Application URL (for Stripe redirects)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Supabase (optional - for persistent storage)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
